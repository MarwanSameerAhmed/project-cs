<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ii"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_unit_id_ly3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_unit_name_ly3"
android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/round_back_etext"
        android:textColor="@color/white"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_unit_conv_ly3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@drawable/round_back_etext"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_units_number_ly3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_unit_price_ly3"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@drawable/round_back_etext"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:gravity="center"
        android:text="TextView" />
</LinearLayout>