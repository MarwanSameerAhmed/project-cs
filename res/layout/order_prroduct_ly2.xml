<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ii"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_product_name_ly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_unit_name_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Unit"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_product_number_ly2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_total_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Unit"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etext_unit_price_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_back_etext_black"
            android:ems="10"
            android:padding="14dp"
            android:layout_margin="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:drawableLeft="@drawable/ic_baseline_attach_money"
            android:drawablePadding="1dp"
            android:hint="Price"
            android:inputType="number|numberDecimal"/>

        <EditText
            android:id="@+id/etext_units_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/round_back_etext_black"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_ad_units_24"
            android:hint="Units"
            android:drawablePadding="4dp"
            android:textColorHint="@color/white"
            android:inputType="number"/>


        <Button
            android:id="@+id/btn_save_ly2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_shape_btn"
            android:text="save" />
>
    </LinearLayout>

    <ListView
        android:id="@+id/ls_units_ly2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>