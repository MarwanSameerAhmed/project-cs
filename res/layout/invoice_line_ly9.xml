<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ii"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_product_name_ly9"
        android:layout_width="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@drawable/round_back_etext"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_unit_name_ly9"
        android:background="@drawable/round_back_etext"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_unit_price_ly9"
        android:background="@drawable/round_back_etext"
        android:layout_width="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_units_number_ly9"
        android:layout_marginRight="11dp"
        android:textColor="@color/white"
        android:background="@drawable/round_back_etext"
        android:layout_marginLeft="11dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />
</LinearLayout>